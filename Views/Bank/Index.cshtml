@model IEnumerable<BankManagementSystem.Models.BankAccount>

<h2>Bank Accounts</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Account</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Account Holder</th>
            <th>Account Number</th>
            <th>Account Type</th>
            <th>Balance</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var account in Model)
{
        <tr>
            <td>@account.AccountHolderName</td>
            <td>@account.AccountNumber</td>
            <td>@account.AccountType</td>
            <td>@account.Balance</td>
            <td>
                <a asp-action="Edit" asp-route-id="@account.Id" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Details" asp-route-id="@account.Id" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Delete" asp-route-id="@account.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
