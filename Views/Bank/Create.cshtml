@model BankManagementSystem.Models.BankAccount

<h2>Add New Account</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="AccountHolderName"></label>
        <input asp-for="AccountHolderName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AccountNumber"></label>
        <input asp-for="AccountNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AccountType"></label>
        <input asp-for="AccountType" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Balance"></label>
        <input asp-for="Balance" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
